<?xml version="1.0" encoding="utf-8"?>
<!--회원가입 시 3번째로 보일 프래그먼트 - 인포21인증 후 추가 정보를 기입한다.-->
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.khumu.android.signUp.SignUpViewModel" />
        <variable
            name="fragment"
            type="com.khumu.android.signUp.AdditionalFormFragment" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/red_500">

        <LinearLayout
            android:id="@+id/form_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingHorizontal="24dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{viewModel.welcomeMessage, default=`컴퓨터공학과 2016101168님\n환영합니다!`}"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="14dp"
                android:lineHeight="18dp"/>
            <ImageView
                android:layout_gravity="center"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:src="@mipmap/ic_launcher"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="닉네임"
                    android:layout_marginBottom="8dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@{ !viewModel.user.nickname.empty ? @drawable/background_round_white : @drawable/background_round_filled_red_400, default=@drawable/background_round_filled_red_400}"
                    >
                    <View
                        android:layout_gravity="center"
                        android:layout_width="2dp"
                        android:layout_height="16dp"

                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="32dp"
                        android:background="@{ !viewModel.user.nickname.empty ? @drawable/background_round_white : @drawable/divider_red_300, default=@drawable/divider_red_300}"
                        />
                    <EditText
                        android:id="@+id/nickname_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="8dp"
                        android:background="@android:color/transparent"
                        android:textColor="@{ !viewModel.user.nickname.empty ? @color/red_500 : @color/white, default=@color/white}"
                        android:textColorHint="@color/red_300"
                        android:hint="사용하실 닉네임 입력해주세요."
                        android:text="@={viewModel.user.nickname}"
                        android:textSize="14dp"
                        android:inputType="text" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="이메일"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@{ !viewModel.user.email.empty ? @drawable/background_round_white : @drawable/background_round_filled_red_400, default=@drawable/background_round_filled_red_400}"
                    >
                    <View
                        android:layout_gravity="center"
                        android:layout_width="2dp"
                        android:layout_height="16dp"

                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="32dp"
                        android:background="@{ !viewModel.user.email.empty ? @drawable/background_round_white : @drawable/divider_red_300, default=@drawable/divider_red_300}"
                        />
                    <EditText
                        android:id="@+id/email_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="8dp"
                        android:background="@android:color/transparent"
                        android:textColor="@{ !viewModel.user.email.empty ? @color/red_500 : @color/white, default=@color/white}"
                        android:textColorHint="@color/red_300"
                        android:hint="이메일을 입력해주세요."
                        android:text="@={viewModel.user.email}"
                        android:textSize="14dp"
                        android:inputType="text" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sign_up_btn"
            app:layout_constraintTop_toBottomOf="@id/form_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:paddingVertical="8dp"
            android:minWidth="0dp"
            android:paddingHorizontal="24dp"
            android:textColor="@color/red_500"
            android:textSize="18dp"
            android:textStyle="bold"
            android:background="@drawable/background_round_white"
            android:text="가입하기"
            android:onClick="@{fragment.onClickNextBTN}"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
