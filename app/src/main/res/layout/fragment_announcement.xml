<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="announcementViewModel"
            type="com.khumu.android.announcement.AnnouncementViewModel" />
        <variable
            name="announcementFragment"
            type="com.khumu.android.announcement.AnnouncementFragment" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="16dp"
        android:orientation="vertical">
        <TextView
            android:textAlignment="center"
            android:id="@+id/announcement_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:text="공지사항"
            android:textStyle="bold"
            android:textSize="21dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/announcement_search_bar_layout"
            android:textColor="@color/red_500"/>
        <TextView
            android:id="@+id/announcement_temp_information_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="mvp로 홈페이지에 있는 모든 공지사항 정보가 제공되지 않습니다."
            app:layout_constraintTop_toBottomOf="@id/announcement_title_tv"
            app:layout_constraintBottom_toTopOf="@id/announcement_search_bar_layout"
            android:textSize="11dp"
            android:textStyle="bold"
            android:textColor="@color/gray_400"
            android:textAlignment="center"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/announcement_search_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="35dp"
            android:background="@drawable/background_soft_round_red_500_bordered_white"
            app:layout_constraintTop_toBottomOf="@+id/announcement_title_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:paddingVertical="13dp">

            <View
                android:id="@+id/divider_view"
                android:layout_width="3dp"
                android:layout_height="20dp"
                android:layout_marginLeft="@dimen/layout_large_space"
                android:background="@drawable/background_round_filled_gray_300"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <EditText
                android:id="@+id/announcement_search_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_large_space"
                android:layout_marginRight="60dp"
                android:background="@android:color/transparent"
                android:hint="찾고 있는 공지를 입력해주세요."
                android:textColorHint="@color/gray_300"
                android:singleLine="true"
                android:textSize="@dimen/default_font_size"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/divider_view"
                />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_search"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="@dimen/layout_large_space"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/announcement_follow_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/announcement_search_bar_layout"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:paddingEnd="13.5dp"
                android:paddingVertical="19dp"
                android:id="@+id/following_announcement_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="팔로우"
                android:textSize="13dp"
                android:textStyle="bold"
                android:textColor="@{announcementViewModel.showFollowedAnnouncement ? @color/red_500 : @color/gray_700}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/entire_announcement_tv"/>
            <View
                android:layout_width="1dp"
                android:layout_height="14dp"
                android:background="@color/gray_700"
                app:layout_constraintTop_toTopOf="@id/following_announcement_tv"
                app:layout_constraintBottom_toBottomOf="@+id/following_announcement_tv"
                app:layout_constraintStart_toEndOf="@id/following_announcement_tv"
                app:layout_constraintEnd_toStartOf="@id/entire_announcement_tv"/>
            <TextView
                android:paddingStart="13.5dp"
                android:paddingVertical="19dp"
                android:id="@+id/entire_announcement_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체보기"
                android:textSize="13dp"
                android:textStyle="bold"
                android:textColor="@{announcementViewModel.showFollowedAnnouncement ? @color/gray_700 : @color/red_500}"
                app:layout_constraintStart_toEndOf="@id/following_announcement_tv"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/announcement_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="40dp"
            app:announcement_list="@{announcementViewModel.announcements}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/announcement_search_bar_layout"
            tools:layout_editor_absoluteX="1dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>