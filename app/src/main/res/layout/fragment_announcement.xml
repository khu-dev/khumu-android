<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="announcementViewModel"
            type="com.khumu.android.announcement.AnnouncementViewModel" />
        <variable
            name="announcementFragment"
            type="com.khumu.android.announcement.AnnouncementFragment" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="16dp"
        android:orientation="vertical">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/announcement_tool_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            android:background="@color/transparent"
            android:minHeight="0dp"
            android:paddingTop="12dp"
            android:paddingHorizontal="30dp"
            android:paddingBottom="6dp">
            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="공지사항"
                android:visibility="visible"
                android:textColor="@color/red_500"
                android:textSize="18dp"
                android:textStyle="bold"/>
        </com.google.android.material.appbar.MaterialToolbar>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/announcement_search_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="35dp"
            android:background="@drawable/background_soft_round_red_500_bordered_white"
            app:layout_constraintTop_toBottomOf="@+id/announcement_tool_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:paddingVertical="13dp">

            <View
                android:id="@+id/divider_view"
                android:layout_width="3dp"
                android:layout_height="20dp"
                android:layout_marginLeft="@dimen/layout_large_space"
                android:background="@drawable/background_round_filled_gray_300"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_large_space"
                android:layout_marginRight="@dimen/layout_large_space"
                android:background="@android:color/transparent"
                android:hint="검색어를 입력해주세요"
                android:singleLine="true"
                android:textColor="@color/gray_700"
                android:textSize="@dimen/default_font_size"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/divider_view"
                />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_search"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="@dimen/layout_large_space"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/announcement_follow_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/announcement_search_bar_layout"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:paddingEnd="13.5dp"
                android:paddingVertical="19dp"
                android:id="@+id/following_announcement_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="팔로우"
                android:textSize="13dp"
                android:textStyle="bold"
                android:textColor="@{announcementViewModel.showFollowedAnnouncement ? @color/red_500 : @color/gray_700}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/entire_announcement_tv"/>
            <View
                android:layout_width="1dp"
                android:layout_height="14dp"
                android:background="@color/gray_700"
                app:layout_constraintTop_toTopOf="@id/following_announcement_tv"
                app:layout_constraintBottom_toBottomOf="@+id/following_announcement_tv"
                app:layout_constraintStart_toEndOf="@id/following_announcement_tv"
                app:layout_constraintEnd_toStartOf="@id/entire_announcement_tv"/>
            <TextView
                android:paddingStart="13.5dp"
                android:paddingVertical="19dp"
                android:id="@+id/entire_announcement_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체보기"
                android:textSize="13dp"
                android:textStyle="bold"
                android:textColor="@{announcementViewModel.showFollowedAnnouncement ? @color/gray_700 : @color/red_500}"
                app:layout_constraintStart_toEndOf="@id/following_announcement_tv"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/announcement_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@id/announcement_search_bar_layout"
            app:announcement_list="@{announcementViewModel.announcements}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>