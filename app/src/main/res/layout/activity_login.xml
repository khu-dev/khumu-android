<?xml version="1.0" encoding="utf-8"?>
<!--로그인 할 때 사용하는 activity-->
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.khumu.android.login.LoginViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_red_500"
        android:paddingVertical="80dp"
        android:paddingHorizontal="60dp">
        <LinearLayout
            android:id="@+id/header_wrapper"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/layout_large_space"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="경희대학교"
                android:textColor="@color/white"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:text="소통"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="과 "
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:text="정보"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="의 공간"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:text="KHUMU"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="에 오신 걸 환영합니다."
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/form_wrapper"
            android:layout_width="239dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/header_wrapper"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingVertical="30dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/username_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이디"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_marginLeft="16dp"
                android:layout_marginVertical="@dimen/layout_default_space"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@{!viewModel.username.isEmpty() ? @drawable/background_round_white : @drawable/background_round_filled_red_400, default=@drawable/background_round_filled_red_400}"
                android:layout_marginBottom="16dp"
                >
                <View
                    android:layout_gravity="center"
                    android:layout_width="2dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="32dp"
                    android:background="@{!viewModel.username.isEmpty() ? @drawable/background_round_white : @drawable/divider_red_300, default=@drawable/divider_red_300}"
                    />
                <EditText
                    android:id="@+id/username_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:textColor="@{ !viewModel.username.isEmpty() ? @color/red_500 : @color/white, default=@color/white}"
                    android:textColorHint="@color/red_300"
                    android:hint="아이디를 입력해주세요."
                    android:text="@={viewModel.username}"
                    android:textSize="13dp"
                    android:inputType="text"/>
            </LinearLayout>


            <TextView
                android:id="@+id/password_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_marginLeft="16dp"
                android:layout_marginVertical="@dimen/layout_default_space"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@{!viewModel.password.isEmpty() ? @drawable/background_round_white : @drawable/background_round_filled_red_400, default=@drawable/background_round_filled_red_400}"
                android:paddingHorizontal="16dp"
                >
                <View
                    android:layout_gravity="center"
                    android:layout_width="2dp"
                    android:layout_height="16dp"

                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="32dp"
                    android:background="@{!viewModel.password.isEmpty() ? @drawable/background_round_white : @drawable/divider_red_300, default=@drawable/divider_red_300}"
                    />
                <EditText
                    android:id="@+id/password_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="8dp"
                    android:background="@android:color/transparent"
                    android:textColor="@{!viewModel.password.isEmpty() ? @color/red_500 : @color/white, default=@color/white}"
                    android:textColorHint="@color/red_300"
                    android:hint="비밀번호를 입력해주세요."
                    android:text="@={viewModel.password}"
                    android:textSize="13dp"
                    android:inputType="textPassword" />
            </LinearLayout>
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/form_wrapper"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/login_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그인"
                android:textAlignment="center"
                android:textColor="@color/red_500"
                android:textSize="@dimen/default_font_size"
                android:textStyle="bold"
                android:background="@drawable/background_round_white"
                android:layout_margin="@dimen/layout_default_space"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingHorizontal="48dp"
                android:paddingVertical="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:onClick="onClickLogin"
                />

            <TextView
                android:id="@+id/button_divider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/login_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginVertical="@dimen/layout_large_space"
                android:textSize="18dp"
                android:text="/"/>
            <TextView
                android:id="@+id/sign_up_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원가입"
                android:textColor="@color/white"
                android:textSize="@dimen/default_font_size"
                android:textStyle="bold"
                android:layout_margin="@dimen/layout_default_space"
                app:layout_constraintTop_toTopOf="@+id/button_divider"
                app:layout_constraintBottom_toBottomOf="@id/button_divider"
                app:layout_constraintEnd_toStartOf="@+id/button_divider"
                app:layout_constraintStart_toStartOf="parent"
                android:onClick="onClickSignUp"/>
            <TextView
                android:id="@+id/find_id_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이디 찾기"
                android:textColor="@color/red_300"
                android:textSize="@dimen/default_font_size"
                android:textStyle="bold"
                android:layout_margin="@dimen/layout_default_space"
                app:layout_constraintTop_toTopOf="@+id/button_divider"
                app:layout_constraintBottom_toBottomOf="@id/button_divider"
                app:layout_constraintStart_toEndOf="@+id/button_divider"
                app:layout_constraintEnd_toEndOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
