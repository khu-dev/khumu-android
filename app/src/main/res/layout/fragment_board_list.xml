<?xml version="1.0" encoding="utf-8"?>
<!--나중에 Nav에서 Board용 탭을 만들면 사용할 Fragment-->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">
    <data>
        <import type="com.khumu.android.data.Board" />
        <variable
            name="boardViewModel"
            type="com.khumu.android.boardList.BoardViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/gray_400"
        android:orientation="vertical">
        <include
            layout="@layout/toolbar_board" />
<!--        <include-->
<!--            layout="@layout/layout_following_board_list"-->
<!--            app:boardViewModel="@{boardViewModel}" />-->
<!--        <include-->
<!--            layout="@layout/layout_entire_board_list"-->
<!--            app:boardViewModel="@{boardViewModel}"/>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:id="@+id/following_board_list_layout"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/background_round_filled_red_500"
                android:text="following"/>
            <androidx.recyclerview.widget.RecyclerView
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingBottom="20dp"
                android:paddingRight="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/following_board_list_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_round_white"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:following_board_list="@{boardViewModel.followingBoards}" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/official_board_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/board_category_font_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/autonomous_board_btn"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/background_top_round_filled_red_500"
                    android:text="공식"/>
                <Button
                    android:id="@+id/autonomous_board_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/board_category_font_size"
                    app:layout_constraintStart_toEndOf="@id/official_board_btn"
                    app:layout_constraintEnd_toStartOf="@id/major_board_btn"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/background_top_round_filled_red_500"
                    android:text="자율"/>
                <Button
                    android:id="@+id/major_board_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/board_category_font_size"
                    app:layout_constraintStart_toEndOf="@id/autonomous_board_btn"
                    app:layout_constraintEnd_toStartOf="@id/lecture_board_btn"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/background_top_round_filled_red_500"
                    android:text="학과"
                    />
                <Button
                    android:id="@+id/lecture_board_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/board_category_font_size"
                    app:layout_constraintStart_toEndOf="@id/major_board_btn"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/background_top_round_filled_red_500"
                    android:text="강의"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingBottom="20dp"
                android:paddingRight="10dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:id="@+id/category_board_list_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_round_white"
                app:category_board_list="@{boardViewModel.categoryBoards}" />
        </LinearLayout>
    </LinearLayout>
</layout>
