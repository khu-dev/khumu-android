<?xml version="1.0" encoding="utf-8"?>
<!--게시물 생성 시에 사용할 액티비티-->
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="activity"
            type="com.khumu.android.articleWrite.ArticleWriteActivity" />
        <variable
            name="viewModel"
            type="com.khumu.android.articleWrite.ArticleWriteViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="16dp"
        android:paddingVertical="16dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/article_write_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="@dimen/layout_default_space">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_cancel"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="게시글 작성"
                android:textSize="16dp"
                android:textColor="@color/red_500"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/article_write_toolbar_layout"
            app:layout_constraintBottom_toTopOf="@+id/article_write_footer_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginVertical="@dimen/layout_default_space"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/layout_default_space">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/article_write_header_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">
                    <LinearLayout
                        android:id="@+id/article_write_boards_wrapper_layout"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginBottom="@dimen/layout_default_space"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:onClick="onClickBoardListPopup">
                        <TextView
                            android:id="@+id/article_write_selected_board_display_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/gray_500"
                            android:background="@drawable/bottom_line_gray_500"
                            android:text="@{viewModel.currentBoard.displayName, default=`게시판 표시 이름`}"
                            />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <EditText
                    android:id="@+id/article_write_title_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/article_write_header_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/background_round_filled_gray_100"
                    android:padding="@dimen/layout_default_space"
                    android:textColorHint="@color/gray_300"
                    android:hint="제목을 입력해주세요."
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:text="@={viewModel.article.title, default=제목}"
                    android:layout_marginVertical="8dp"
                    />
                <EditText
                    android:id="@+id/article_write_content_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="200dp"
                    android:scrollbars="vertical"
                    android:gravity="top"
                    app:layout_constraintTop_toBottomOf="@+id/article_write_title_et"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginVertical="8dp"
                    android:padding="@dimen/layout_default_space"
                    android:background="@drawable/background_round_filled_gray_100"
                    android:textColorHint="@color/gray_300"
                    android:textSize="14dp"
                    android:hint="내용을 입력해주세요."
                    android:textColor="@color/black"
                    android:text="@={viewModel.liveArticle.content, default=내용}"
                    />
        <!--    본문을 제외한 View들-->

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/article_upload_images_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_round_filled_gray_100"
                    android:padding="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/article_write_content_et"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginVertical="8dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:article_image_path_list="@{viewModel.uploadingImagePaths}"
                    app:viewModel="@{viewModel}"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/article_write_footer_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@{activity.getIsAnonymousTVBackground(viewModel.article.kind), default=@drawable/background_round_filled_red_500}"
                >
            <TextView
                android:id="@+id/article_is_anonymous_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/layout_default_space"
                android:paddingHorizontal="16dp"
                android:minWidth="0dp"
                android:textColor="@{activity.getIsAnonymousTVTextColor(viewModel.article.kind), default=@color/white}"
                android:text="익명"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:onClick="onClickIsAnonymousTV"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@{viewModel.isWritable ? @drawable/background_round_filled_red_500:@drawable/background_round_filled_gray_300, default=@drawable/background_round_filled_gray_300}"
                >
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:paddingVertical="@dimen/layout_default_space"
                    android:paddingHorizontal="16dp"
                    android:textColor="@color/white"
                    android:text="등록"
                    android:onClick="onClickSubmitButton"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>